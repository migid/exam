<h1>New knowledge</h1>

<% form_for(@knowledge) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :remark %><br />
    <%= f.text_field :remark %>
  </p>
  <p>
    <%= f.label :subject_id %><br />
    <%= f.select :subject_id, Subject.all.collect{|subject|[subject.name, subject.id]}, {:prompt=>"请选择"} %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', knowledges_path %>